<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  <meta charset="utf-8">
  <title>Chat Application</title>
</head>
<script defer src="/socket.io/socket.io.js"></script>
<script defer src="script.js"></script>
<body>  

  <!-- ALL ROOMS AVAILABLE -->
  <div style="margin:auto; width: 100%; background-color: #262626; padding-bottom: 10px;">
    <div style="color: cornsilk; text-align: center;">
      <h2>Rooms</h2>
      <button class="btn btn-outline-primary" onclick="room1()"> Room 1 </button>&nbsp;&nbsp;
      <button class="btn btn-outline-primary" onclick="room2()"> Room 2 </button>
    </div>
  </div>

  <!-- CHAT -->
  <br>
  <div class="overflow-auto" id="message-container" style="margin: auto; padding: 5px; border-radius: 5px; width: 30%; height: 150px;"></div>

  <!-- FORM FOR SENDING MESSAGE -->
  <div id="form-container" style="margin: auto; width: 30%; text-align: center;">
    <form id="message-form">
      <br>
      <input type="text" class="form-control" id="input" placeholder="Enter Message">
      <br>
      <button  class="btn btn-outline-primary" type="submit" id="send-button" style="width: 200px;"> SEND </button>
    </form>
  </div>

</body>
</html>